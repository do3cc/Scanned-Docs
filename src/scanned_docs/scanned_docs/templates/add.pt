<body metal:use-macro="base">
  <div id="container" metal:fill-slot="content">
    <div class="page-header">
      <h1>Add new document</h1>
    </div>
    <form action="human_add" method="post" enctype="multipart/form-data">
      <div class="clearfix">
        <div class="input">
          <input type="text" name="title" placeholder="Title" id="title" />
        </div>
      </div>
      <div class="clearfix">
        <div class="input">
          <input type="datetime" name="created" placeholder="Created" id="created" />
        </div>
      </div>
      <div class="clearfix">
        <div class="input">
          <textarea name="description" placeholder="description"></textarea>
        </div>
      </div>
      <div class="clearfix">
        <div class="input">
          <input type="file" name="file" id="file" />
        </div>
      </div>
      <div class="actions">
        <input type="submit" value="Add" class="btn primary">&nbsp;<button class="btn" type="reset">Cancel</button>
      </div>
    </form>
  </div>
</body>
